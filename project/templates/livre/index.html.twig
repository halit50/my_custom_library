{% extends 'base.html.twig' %}

{% block title %}Nos livres{% endblock %}

{% block body %}
<h1 class="text-center mt-5">Nos livres </h1>

<div class="row row-cols-1 row-cols-md-3 g-4 container text-center m-auto">
    {% for livre in livres %}
  <div class="col">
    <div class="card h-100">
      <img src="https://www.cloudnetcare.fr/wp-content/uploads/2022/06/les-differents-types-de-test-d-un-logiciel.webp" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">{{ livre.titre }}</h5>
        <p class="card-text livre-description">{{ livre.description }}</p>
        <a href="" class="btn rounded-pill modifier-livre-btn"> Consulter </a>
      </div>
    </div>
  </div>
  {% endfor %}
</div>
 <div class="mt-5 paginator">
        {{ knp_pagination_render(livres,'pagination/index.html.twig') }}
</div>
    
{% endblock %}
